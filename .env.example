# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
APP_NAME=NestJS Base Template
APP_VERSION=1.0.0
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=nestjs_template
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRATION=1d
JWT_ISSUER=nestjs-template
JWT_AUDIENCE=nestjs-template-users

# Refresh Token
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRATION=7d

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# MAIL CONFIGURATION (SMTP)
# ============================================
# Gmail Example
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME=NestJS Template

# SendGrid Example (alternative)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USER=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# MailTrap Example (for testing)
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USER=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password

# ============================================
# STORAGE CONFIGURATION
# ============================================
STORAGE_TYPE=local # local or s3
UPLOAD_PATH=./uploads

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ============================================
# RATE LIMITING & THROTTLING
# ============================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=debug # error, warn, info, http, verbose, debug, silly

# ============================================
# SECURITY CONFIGURATION
# ============================================
API_KEY=your-api-key-for-external-integrations

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Session/Token Settings
SESSION_SECRET=your-session-secret-key
TOKEN_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=604800

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY=300

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# QUEUE CONFIGURATION (Bull)
# ============================================
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# ============================================
# PAGINATION DEFAULTS
# ============================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/facebook/callback

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your-license-key
NEW_RELIC_APP_NAME=NestJS Template

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SWAGGER=true
ENABLE_COMPRESSION=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true

# ============================================
# DEVELOPMENT/DEBUG
# ============================================
DEBUG=false
VERBOSE_LOGGING=false

# ============================================
# TIMEZONE & LOCALE
# ============================================
TIMEZONE=UTC
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,vi,fr,de,es

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_TTL=3600
CACHE_MAX_ITEMS=100

# ============================================
# WEBHOOK CONFIGURATION
# ============================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=5000

# ============================================
# MAINTENANCE MODE
# ============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently under maintenance. Please check back soon.

# ============================================
# TESTING CONFIGURATION
# ============================================
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5433
TEST_DATABASE_NAME=nestjs_test
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6380